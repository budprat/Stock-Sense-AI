# ============================================
# StockSenseAI Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# ============================================
# DATABASE (Required)
# ============================================
# PostgreSQL connection string for Neon serverless database
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:port/stocksense

# ============================================
# AUTHENTICATION (Required for Production)
# ============================================
# Express session secret - use a strong random string
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-secret-key-here-change-this

# Replit Auth - Required for authentication
# Comma-separated list of production domains
REPLIT_DOMAINS=your-domain.replit.app,your-custom-domain.com

# Replit project ID
REPL_ID=your-repl-id

# ============================================
# AI FEATURES (Optional)
# ============================================
# Google Gemini API key for AI-powered recommendations
# Get your key from: https://makersuite.google.com/app/apikey
# If not provided, AI features will be disabled
GEMINI_API_KEY=

# ============================================
# DEMO & CLEANUP (Optional)
# ============================================
# Secret key to protect demo cleanup endpoint
# Only set this if you want to restrict access to /api/demo/cleanup
DEMO_CLEANUP_SECRET=

# ============================================
# OPENID CONNECT (Optional)
# ============================================
# OpenID Connect issuer URL
# Defaults to https://replit.com/oidc if not provided
ISSUER_URL=https://replit.com/oidc

# ============================================
# SERVER CONFIGURATION (Optional)
# ============================================
# Environment: development or production
NODE_ENV=development

# Server port - defaults to 5000 if not set
# Note: On Replit, this must be 5000
PORT=5000

# Set to "1" in production Replit deployments
REPLIT_DEPLOYMENT=
